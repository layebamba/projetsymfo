{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Matricule</th>
            <th>Nomcomplet</th>
            <th>Datenaiss</th>
             <th>salaire</th>
              <th>service</th>
               <th>Action</th>
        </tr>
    </thead>
    <tbody>
     {% for employer in employers %} 
        <tr>
             <td scope="row">{{employer.matricule}}</td>
            <td>{{employer.nomcomplet}}</td>
            <td>{{employer.datenaiss|date('d/m/y')}}</td>
            <td>{{employer.salaire}}</td>
            <td>{{employer.service.libelle}}</td> 
            <td> <a href="{{path('blog_edit',{id:employer.id})}}" class="btn btn-primary">Edit </a></td>  
            <td> <a href="{{path('blog_delete',{id:employer.id})}}" class="btn btn-primary">supprimer </a></td>
        </tr>
      {% endfor %} 
    </tbody>
    </table>
    
{% endblock %}
